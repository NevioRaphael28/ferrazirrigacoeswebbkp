@{
    ViewBag.Title = "Pagina Inicial";
}

<main>

    <section class="row" aria-labelledby="aspnetTitle">
        <img src="/Resources/logo.png" style="width: 150px; height: 101px;" alt="Logo">
    </section>

    <div class="row">

    </div>
</main>

<html>
<head>
    <title>Caixa</title>
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            let caixaId = null;  // Variável para armazenar o ID do caixa

            // Preenche a data e hora atuais no formato ISO na abertura da página
            const now = new Date();
            const formattedDate = now.toISOString().split('T')[0];
            const formattedHour = `${String(now.getHours()).padStart(2, '0')}:${String(now.getMinutes()).padStart(2, '0')}`;

            $("#txtDataAbertura").val(formattedDate);
            $("#txtHoraAbertura").val(formattedHour);

            $("#btnAbrirCaixa").click(function () {
                AbrirCaixa();
            });

            $("#btnFecharCaixa").click(function () {
                FecharCaixa();
            });

            function AbrirCaixa() {
                var valorInicial = parseFloat($("#txtValorAbertura").val());

                if (isNaN(valorInicial) || valorInicial <= 0) {
                    alert("Por favor, insira um valor de abertura válido.");
                    return;
                }

                var caixa = {
                    TotalInicial: valorInicial
                };

                $.ajax({
                    async: true,
                    type: 'POST',
                    dataType: 'JSON',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(caixa),
                    url: '/Caixa/AbrirCaixa',
                    success: function (response) {
                        if (response.success) {
                            alert("Caixa Aberto com sucesso!");
                            caixaId = response.caixaId;  // Armazena o ID do caixa retornado pelo backend
                            window.location.reload(true);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        console.error("Erro ao abrir o caixa!");
                    }
                });
            }

            function PreencherDataHoraFechamento() {
                const now = new Date();
                const formattedDate = now.toISOString().split('T')[0];  // Formato ISO para evitar problemas
                const formattedHour = `${String(now.getHours()).padStart(2, '0')}:${String(now.getMinutes()).padStart(2, '0')}`;

                $("#txtDataFechamento").val(formattedDate);
                $("#txtHoraFechamento").val(formattedHour);
            }

            function FecharCaixa() {
                PreencherDataHoraFechamento();   

                $.ajax({
                    async: true,
                    type: 'POST',
                    dataType: 'JSON',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(caixa),
                    url: '/Caixa/FecharCaixa',
                    success: function () {
                        alert("Fechado com sucesso!.");
                        window.location.reload(true);
                    },
                    error: function () {
                        console.error("Erro ao fechar o caixa:");
                    }
                });
            }
        });

    </script>
</head>
<body>
    <fieldset>
        <legend>Caixa</legend>
        <div class="container">
            @Session["UsuarioId"];
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        Data de Abertura:
                        <input type="text" id="txtDataAbertura" name="DataAbertura" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        Hora de Abertura:
                        <input type="text" id="txtHoraAbertura" name="HoraAbertura" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        Valor de Abertura:
                        <input type="number" id="txtValorAbertura" name="ValorAbertura" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        Data de Fechamento:
                        <input type="text" id="txtDataFechamento" name="DataFechamento" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        Hora de Fechamento:
                        <input type="text" id="txtHoraFechamento" name="HoraFechamento" class="form-control" readonly />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="button" value="Abrir Caixa" id="btnAbrirCaixa" class="btn btn-success" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="button" value="Fechar Caixa" id="btnFecharCaixa" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</body>
</html>
