@model FerrazIrrigacoes.Models.Lancamento

@{
    ViewBag.Title = "Create";
}

<h2>Adicionar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Lancamento</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Movimento -->
        <div class="form-group">
            @Html.LabelFor(model => model.Movimento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Movimento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Movimento, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Valor -->
        <div class="form-group">
            @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Descrição -->
        <div class="form-group">
            @Html.LabelFor(model => model.Descricao,"Descrição", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Botão de Criar -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="btn-group" role="group" style="width: 100%;">
                    <input type="submit" value="CRIAR" class="btn btn-default" style="width: 20%;" />
                    @Html.ActionLink("RETORNAR", "Index", null, new { @class = "btn btn-info btn-sm", style = "width: 30%;" })
                </div>
            </div>
        </div>
    </div>
}

<!-- Link para voltar à lista -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
