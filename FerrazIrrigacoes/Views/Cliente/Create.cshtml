                @Html.DropDownList("Cidade", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="btn-group" role="group" style="width: 100%;">
                    <input type="submit" value="CRIAR" class="btn btn-default" style="width: 20%;" />
                    @Html.ActionLink("RETORNAR", "Index", null, new { @class = "btn btn-info btn-sm", style = "width: 30%;" })
                </div>
            </div>
        </div>
    </div>
